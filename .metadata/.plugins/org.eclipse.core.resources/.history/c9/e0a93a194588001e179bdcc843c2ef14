<!DOCTYPE html>
<html lang="ko" xmlns:th="http://www.thymeleaf.org">

<jsp:include page="../layout/header.jsp">
  <jsp:param value="${upload.uploadNo}번 게시글" name="title"/>
</jsp:include>

<style>
  .attach {
    cursor: pointer;
  }
</style>
<body>
  <div th:replace="~{/layout/header::header"></div>
  <div class="main_wrap">
  <div class="wrap wrap_8">

  <h1 style="text-align: center;">Upload 게시글</h1>
  <div th:text="|작성자 : ${upload.userDto.name}|"></div>
  <div th:text="|작성일 : ${upload.createdAt}|"></div>
  <div th:text="|수정일 : ${upload.modifiedAt}|"></div>
  <div th:text="|제목 : ${upload.title}|"></div>
  <div>내용</div>
  <th:block th:if="{#strings.isEmpty(upload.contents)}">
    <div>내용 없음</div>
  </th:block>
  <div>
    <c:if test="${sessionScope.user.userNo == upload.userDto.userNo}">
      <form id="frm_btn">
        <input type="hidden" name="uploadNo" value="${upload.uploadNo}">
        <button type="button" id="btn_edit">편집</button>
        <button type="button" id="btn_remove">삭제</button>
      </form>
    </c:if>
  </div>
  
  <hr>
  
  <h4>첨부 다운로드</h4>
  <div>
    <th:block th:if="${#lists.isEmpty(attachList)}">
      <div>첨부 없음</div>
    </th:block>
    <td th:text="${not empty attachList}">
      <c:forEach items="${attachList}" var="atc">
        <div class="attach" data-attach_no="${atc.attachNo}">
          <c:if test="${atc.hasThumbnail == 1}">
            <img th:src="@{${atc.path}/s_${atc.filesystemName}" alt="썸네일" width="50px">
          </c:if>
          <c:if test="${atc.hasThumbnail == 0}">
            <img th:src="@{/resources/image/attach1.png}" alt="썸네일" width="50px">
          </c:if>
          ${atc.originalFilename}
        </div>
      </c:forEach>
      <div><a th:href="@{/upload/downloadAll.do?uploadNo=${upload.uploadNo}">모두 다운로드</a></div>
    </td>
  </div>
  
  </div>
    
  <script>
  
    var frmBtn = $('#frm_btn');
  
    const fnEdit = () => {
  	  $('#btn_edit').click(() => {
  		  frmBtn.attr('th:action', '@{/upload/edit.form}');
  		  frmBtn.attr('method', 'get');
  		  frmBtn.submit();
  	  })
    }
    
    const fnRemove = () => {
  	  $('#btn_remove').click(() => {
  		  if(confirm('해당 게시글을 삭제할까요?')){
          frmBtn.attr('th:action', '@{/upload/removeUpload.do}');
          frmBtn.attr('method', 'post');
          frmBtn.submit();
  		  }
  	  })
    }
  
    const fnDownload = () => {
  	  $('.attach').click(function(){
  		  if(confirm('다운로드 할까요?')){
  			  location.href = '@{/upload/download.do?attachNo=}' + $(this).data('attach_no');
  		  }
  	  })
    }
    
    const fnModifyResult = () => {
  	  let modifyResult = /*[[${modifyResult}]]*/ null;
  	  if(modifyResult !== ''){
  		  if(modifyResult === 1){
  			  alert('게시글이 수정되었습니다.');
  		  } else {
  			  alert('게시글이 수정되지 않았습니다.');
  		  }
  	  }
    }
    
    fnEdit();
    fnRemove();
    fnDownload();
    fnModifyResult();
    
  </script>
  </div>
  <div th:replace="~{/layout/footer::footer}"></div>
  </body>
</html>